<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mostPopular"
            type="com.zygotecnologia.zygotv.model.Show" />

        <variable
            name="vm"
            type="com.zygotecnologia.zygotv.ui.shows.ShowsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".main.MainActivity">

        <TextView
            android:id="@+id/tvMostPopularName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{mostPopular.name}"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="6dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nome da sÃ©rie"/>

        <ImageView
            android:id="@+id/ivMostPopularPoster"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="6dp"
            android:onClick="@{() -> vm.onShowClicked(mostPopular.id)}"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:backdropPath="@{mostPopular.backdropPath}"
            app:layout_constraintTop_toBottomOf="@+id/tvMostPopularName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/image_placeholder"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGenresList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivMostPopularPoster"
            tools:listitem="@layout/genre_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>